<div class="nav-header">
  <md-icon-button id="menu-toggle">
    <md-icon>menu</md-icon>
  </md-icon-button>
  <span class="logo-text"><%= config.title %></span>
</div>

<div class="nav-list">
  <%
  const menuItems = theme.menu || { // 已将 'menu' 重命名为 'menuItems'
    'Home': { path: '/', icon: 'home' },
    'Archives': { path: '/archives', icon: 'archive' },
    'Categories': { path: '/categories', icon: 'category' }, // 恢复默认的 Categories
    'Tags': { path: '/tags', icon: 'tag' } // 恢复默认的 Tags
  };
  for (let name in menuItems){ // 循环遍历 menuItems
    const item = menuItems[name];
  %>
    <a href="<%- url_for(item.path || item) %>" class="nav-link <% if (is_current(item.path)) { %>active<% } %>">
      <md-icon><%= item.icon || 'article' %></md-icon>
      <span class="nav-text"><%= name %></span>
    </a>
  <% } %>

  <%# Theme controller trigger, pushed to the bottom %>
  <div class="nav-link" id="theme-trigger" style="cursor: pointer; margin-top: auto;">
    <md-icon>palette</md-icon>
    <span class="nav-text">Theme</span>
  </div>
</div>
